<script>
  // Auto-calc percentage and saved amount if you set prices programmatically
  (function(){
    const oldEl = document.getElementById('oldPrice');
    const newEl = document.getElementById('newPrice');
    const saveEl = document.getElementById('saveAmt');
    const pctEl = document.getElementById('pctBadge');

    // parse price helper (assumes "₹" optional, commas)
    function parsePrice(str){
      return Number(String(str).replace(/[^\d.]/g,''));
    }

    const oldPrice = parsePrice(oldEl.textContent || '0');
    const newPrice = parsePrice(newEl.textContent || '0');

    if(oldPrice && newPrice && oldPrice > newPrice){
      const saved = oldPrice - newPrice;
      const pct = Math.round((saved / oldPrice) * 100);
      saveEl.textContent = `Save ₹${saved.toLocaleString()}`;
      pctEl.textContent = `-${pct}% OFF`;
    } else {
      // hide badge if no discount
      pctEl.style.display = 'none';
      saveEl.style.display = 'none';
    }
  })();
</script>

